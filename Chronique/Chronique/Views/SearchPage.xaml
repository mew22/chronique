<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:chronique="clr-namespace:Chronique;assembly=Chronique"
             x:Class="Chronique.SearchPage"
             x:Name="BrowsePage"
             xmlns:listView="clr-namespace:Syncfusion.ListView.XForms;assembly=Syncfusion.SfListView.XForms"
             xmlns:dataSource="clr-namespace:Syncfusion.DataSource;assembly=Syncfusion.DataSource.Portable"
             xmlns:xForms="clr-namespace:Syncfusion.SfPullToRefresh.XForms;assembly=Syncfusion.SfPullToRefresh.XForms"
             xmlns:xForms1="clr-namespace:Syncfusion.SfPicker.XForms;assembly=Syncfusion.SfPicker.XForms"
             xmlns:forms="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             xmlns:transformations="clr-namespace:FFImageLoading.Transformations;assembly=FFImageLoading.Transformations"
             Title="{Binding Title}">
    <!-- NavigationPage.HasNavigationBar="False" -->
    <ContentPage.ToolbarItems>
        <ToolbarItem Name="Info" Order="Secondary" Priority="1" Icon="ic_action_info.png" Clicked="About_Clicked" />
    </ContentPage.ToolbarItems>
    <ContentPage.BindingContext>
        <chronique:SearchViewModel x:Name="viewModel"/>
    </ContentPage.BindingContext>

    
    <ContentPage.Resources>
        <ResourceDictionary>
            <chronique:BoolToImageConverter x:Key="BoolToImageConverter"/>
            <DataTemplate x:Name="ItemTemplate"  x:Key="ItemTemplate">
                <ViewCell>
                    <ViewCell.View>
                        <Grid x:Name="grid" RowSpacing="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="1" />
                            </Grid.RowDefinitions>
                            <Grid RowSpacing="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="70" />
                                </Grid.ColumnDefinitions>

<!--                                <Image Source="{Binding Photo}"-->
<!--                       VerticalOptions="Center"-->
<!--                       HorizontalOptions="Center"-->
<!--                       HeightRequest="50"/>-->
                                <forms:CachedImage HorizontalOptions="Center" VerticalOptions="Center"
                                HeightRequest="50" CacheDuration="30" RetryCount="3" RetryDelay="250"
                                DownsampleToViewSize="true"
                                LoadingPlaceholder = "loading.png"
                                ErrorPlaceholder = "error.png"
                                Source = "{Binding Photo_uri}">
                                    <forms:CachedImage.Transformations>
                                        <transformations:CircleTransformation />
                                    </forms:CachedImage.Transformations>
                                </forms:CachedImage>
                                <Grid Grid.Column="1"
                      RowSpacing="1"
                      Padding="10,0,0,0"
                      VerticalOptions="Center">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <Label LineBreakMode="NoWrap"
                         TextColor="#474747"
                         Text="{Binding Title}">
                                        <Label.FontSize>
                                            <OnPlatform x:TypeArguments="x:Double">
                                                <On Platform="Android">
                                                    <OnIdiom x:TypeArguments="x:Double"
                                   Phone="16"
                                   Tablet="18" />
                                                </On>
                                                <On Platform="iOS">
                                                    <OnIdiom x:TypeArguments="x:Double"
                                   Phone="16"
                                   Tablet="18" />
                                                </On>
                                            </OnPlatform>
                                        </Label.FontSize>
                                    </Label>
                                    <Label Grid.Row="1"
                         Grid.Column="0"
                         TextColor="#474747"
                         LineBreakMode="NoWrap"
                         Text="{Binding Subtitle}">
                                        <Label.FontSize>
                                            <OnPlatform x:TypeArguments="x:Double">
                                                <On Platform="Android">
                                                    <OnIdiom x:TypeArguments="x:Double"
                                   Phone="12"
                                   Tablet="14" />
                                                </On>
                                                <On Platform="iOS">
                                                    <OnIdiom x:TypeArguments="x:Double"
                                   Phone="12"
                                   Tablet="14" />
                                                </On>
                                            </OnPlatform>
                                        </Label.FontSize>
                                    </Label>
                                </Grid>
                            </Grid>
                            <StackLayout Grid.Row="1" BackgroundColor="Gray" HeightRequest="1"/>
                        </Grid>
                    </ViewCell.View>
                </ViewCell>
            </DataTemplate>
            <DataTemplate x:Name="GroupHeaderTemplate"  x:Key="GroupHeaderTemplate">
                <ViewCell>
                    <ViewCell.View>
                        <Grid BackgroundColor="#E4E4E4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Image x:Name="NormalImage" Grid.Column="0" HorizontalOptions="Center"
                HeightRequest="30"
                WidthRequest="30"
                Source="{Binding IsExpand, Converter={StaticResource BoolToImageConverter}}"
                VerticalOptions="Center"/>
                            <Label Text="{Binding Key}" Grid.Column="1"
                     FontSize="22"
                     FontAttributes="Bold"
                     VerticalOptions="Center"
                     HorizontalOptions="Start"
                     Margin="20,0,0,0" />
                        </Grid>
                    </ViewCell.View>
                </ViewCell>
            </DataTemplate>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <xForms:SfPullToRefresh x:Name="pullToRefresh"
                                    TransitionMode="Push"
                                    ProgressBackgroundColor="BlueViolet"
                                    ProgressStrokeColor="Red"
                                    Pulling="PullToRefresh_Pulling"
                                    Refreshing="PullToRefresh_Refreshing"
                                    Refreshed="PullToRefresh_Refreshed"
                                    IsRefreshing="False" 
                                    PullingThreshold="100"
                                    RefreshContentHeight="50"
                                    RefreshContentThreshold="30"
                                    RefreshContentWidth="50">
            <xForms:SfPullToRefresh.PullableContent>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="0"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <SearchBar x:Name="searchBar" Placeholder = "Search artists, albums, tracks..." TextChanged="OnFilterTextChanged" SearchButtonPressed="OnSearchButtonPressed"></SearchBar>
                    <listView:SfListView x:Name="listView" ItemSize="70" GroupHeaderSize="60" ItemTemplate="{StaticResource ItemTemplate}" GroupHeaderTemplate="{StaticResource GroupHeaderTemplate}"
                           ItemsSource="{Binding Items, Mode=TwoWay}" ItemSpacing="0,0,5,0" AllowGroupExpandCollapse="True" IsScrollBarVisible="True" 
                           GroupCollapsing="ListView_GroupCollapsing" GroupExpanding="ListView_GroupExpanding" ItemHolding="ListView_ItemHolding" ItemTapped="ListView_ItemTapped" ItemDoubleTapped="ListView_ItemDoubleTapped"
                           Grid.Row="1" Grid.Column="0">
                    </listView:SfListView>
                </Grid>
            </xForms:SfPullToRefresh.PullableContent>
        </xForms:SfPullToRefresh>
    </ContentPage.Content>
</ContentPage>