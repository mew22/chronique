<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Chronique.Views.PlaylistPage"
             xmlns:pulltoRefresh="clr-namespace:Syncfusion.SfPullToRefresh.XForms;assembly=Syncfusion.SfPullToRefresh.XForms"
             xmlns:syncfusion="clr-namespace:Syncfusion.ListView.XForms;assembly=Syncfusion.SfListView.XForms"
             xmlns:forms="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             xmlns:transformations="clr-namespace:FFImageLoading.Transformations;assembly=FFImageLoading.Transformations"
             xmlns:viewModels="clr-namespace:Chronique.ViewModels;assembly=Chronique">
    <!-- NavigationPage.HasNavigationBar="False" -->
    <ContentPage.ToolbarItems>
        <ToolbarItem Name="Info" Order="Secondary" Priority="1" Icon="ic_action_info.png" Clicked="About_Clicked" />
    </ContentPage.ToolbarItems>
    <ContentPage.BindingContext>
        <viewModels:PlaylistViewModel x:Name="viewModel"/>
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <ResourceDictionary>
            <DataTemplate x:Name="ItemTemplate"  x:Key="ItemTemplate">
                <ViewCell>
                    <ViewCell.View>
                        <Grid RowSpacing="0" ColumnSpacing="0" Margin="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="1" />
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0" Padding="0,2,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <StackLayout Grid.Column="0">
                                    <StackLayout.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding Path=BindingContext.OpenWebCommand, Source={x:Reference Name=listView}}" CommandParameter="{Binding .}"/>
                                    </StackLayout.GestureRecognizers>
                                    <forms:CachedImage x:Name="img_logo" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"
                                                       CacheDuration="30" RetryCount="3" RetryDelay="250"
                                                       LoadingPlaceholder = "loading.png"
                                                       ErrorPlaceholder = "error.png"
                                                       Source = "{Binding LogoUrl}">
                                        <forms:CachedImage.Transformations>
                                            <transformations:CornersTransformation CornersTransformType="AllRounded"/>
                                        </forms:CachedImage.Transformations>
                                    </forms:CachedImage>
                                </StackLayout>
                                <Grid RowSpacing="0" Padding="10" Grid.Column="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="50" />
                                    </Grid.RowDefinitions>
                                    <Label Grid.Row="0" Text="{Binding Name}" FontAttributes="Bold" FontSize="16" TextColor="#474747" />
                                    <Label Grid.Row="1" Text="{Binding Date}" Opacity=" 0.54" TextColor="#000000" FontSize="12"  />

                                    <Grid Grid.Row="2" Padding="0,15,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Button x:Name="button" Margin="-3,0,0,0" Grid.Column="0" Text="READ MORE" WidthRequest="86" HeightRequest="40"
                                TextColor="White" BackgroundColor="#2196F3" FontSize="10" VerticalOptions="CenterAndExpand" HorizontalOptions="Center" 
                                
                                Command="{Binding Path=BindingContext.ReadMoreCommand, Source={x:Reference Name=listView}}"
                                CommandParameter="{Binding .}" />
                                        <StackLayout Orientation="Horizontal" Margin="0,0,5,0" HeightRequest="31" Grid.Column="1" HorizontalOptions="End" VerticalOptions="Center">
                                            <Grid Padding="2,0,2,0" HorizontalOptions="Fill" VerticalOptions="Fill">
                                                <Grid.GestureRecognizers>
                                                    <TapGestureRecognizer Command="{Binding Path=BindingContext.TwitterCommand, Source={x:Reference listView}}" CommandParameter="{Binding .}"/>
                                                </Grid.GestureRecognizers>
                                                <Grid VerticalOptions="Center" HorizontalOptions="Center">
                                                    <forms:CachedImage HeightRequest="24" WidthRequest="24"
                                                                       DownsampleToViewSize="true"
                                                                       LoadingPlaceholder = "loading.png"
                                                                       ErrorPlaceholder = "error.png"
                                                                       Source = "resource://Chronique.Images.SocialNetwork.Blog_Twitter.png">
                                                    </forms:CachedImage>
                                                </Grid>
                                            </Grid>
                                            <Grid Padding="2,0,2,0" HorizontalOptions="Fill" VerticalOptions="Fill">
                                                <Grid.GestureRecognizers>
                                                    <TapGestureRecognizer Command="{Binding Path=BindingContext.LinkedInCommand, Source={x:Reference listView}}" CommandParameter="{Binding .}"/>
                                                </Grid.GestureRecognizers>
                                                <Grid VerticalOptions="Center" HorizontalOptions="Center">
                                                    <forms:CachedImage HeightRequest="24" WidthRequest="24"
                                                                       DownsampleToViewSize="true"
                                                                       LoadingPlaceholder = "loading.png"
                                                                       ErrorPlaceholder = "error.png"
                                                                       Source = "resource://Chronique.Images.SocialNetwork.Blog_LinkedIn.png">
                                                    </forms:CachedImage>
                                                </Grid>
                                            </Grid>
                                            <Grid Padding="2,0,2,0" HorizontalOptions="Fill" VerticalOptions="Fill">
                                                <Grid.GestureRecognizers>
                                                    <TapGestureRecognizer Command="{Binding Path=BindingContext.FacebookCommand, Source={x:Reference listView}}" CommandParameter="{Binding .}"/>
                                                </Grid.GestureRecognizers>
                                                <Grid VerticalOptions="Center" HorizontalOptions="Center">
                                                    <forms:CachedImage HeightRequest="24" WidthRequest="24"
                                                                       DownsampleToViewSize="true"
                                                                       LoadingPlaceholder = "loading.png"
                                                                       ErrorPlaceholder = "error.png"
                                                                       Source = "resource://Chronique.Images.SocialNetwork.Blog_Facebook.png">
                                                    </forms:CachedImage>
                                                </Grid>
                                            </Grid>
                                            <Grid Padding="2,0,2,0" HorizontalOptions="Fill" VerticalOptions="Fill">
                                                <Grid.GestureRecognizers>
                                                    <TapGestureRecognizer Command="{Binding Path=BindingContext.GooglePlusCommand, Source={x:Reference listView}}" CommandParameter="{Binding .}"/>
                                                </Grid.GestureRecognizers>
                                                <Grid VerticalOptions="Center" HorizontalOptions="Center">
                                                    <forms:CachedImage HeightRequest="24" WidthRequest="24"
                                                                       DownsampleToViewSize="true"
                                                                       LoadingPlaceholder = "loading.png"
                                                                       ErrorPlaceholder = "error.png"
                                                                       Source = "resource://Chronique.Images.SocialNetwork.Blog_Google_Plus.png">
                                                    </forms:CachedImage>
                                                </Grid>
                                            </Grid>
                                        </StackLayout>
                                    </Grid>
                                </Grid>
                            </Grid>
                            <BoxView Grid.Row="1" HeightRequest="1" Opacity="0.75" BackgroundColor="#DFDEE3" />
                        </Grid>
                    </ViewCell.View>
                </ViewCell>
            </DataTemplate>
        </ResourceDictionary>
    </ContentPage.Resources>

                        <ContentPage.Content>
        <Grid RowSpacing="0" ColumnSpacing="0" Padding="0" Margin="0">
